-#  This file is app/views/movies/index.html.haml
%h2 All movies on Rottenpotatoes with same director as #{@movie.title}

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)
        
= link_to 'RETURN', movie_path(@movie)


